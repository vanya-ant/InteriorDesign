
@{
    ViewData["Title"] = "Portfolio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Start portfolio-->
<div id="works">
    <div id="myCarousel" class="carousel slid" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/works/C1.jpg" alt="1">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/C2.png" alt="2">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/C3.png" alt="3">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/classic_1.jpg" alt="4">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/classic_2.jpg" alt="5">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/classic_3.jpg" alt="6">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/childrens_loft_1.png" alt="7">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/childrens_loft_2.png" alt="8">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/childrens_2.jpg" alt="9">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/Dnevna 2.png" alt="10">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/dnevna ap 6.jpg" alt="11">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/Dnevna.png" alt="12">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/bath 1.png" alt="13">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/works/Bath 22.png" alt="14">
            </div>
        </div>
        <a class="carousel-control-prev" href="myCarouselControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="myCarouselControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!--End portfolio-->
<script>
$(document).ready(function(){
  // Activate Carousel
  $("#myCarousel").carousel();

  // Enable Carousel Indicators
  $(".item1").click(function(){
    $("#myCarousel").carousel(0);
  });
  $(".item2").click(function(){
    $("#myCarousel").carousel(1);
  });
  $(".item3").click(function(){
    $("#myCarousel").carousel(2);
  });
  $(".item4").click(function(){
    $("#myCarousel").carousel(3);
  });

  // Enable Carousel Controls
  $(".left").click(function(){
    $("#myCarouselControls").carousel("prev");
  });
  $(".right").click(function(){
    $("#myCarouselControls").carousel("next");
  });
});
</script>

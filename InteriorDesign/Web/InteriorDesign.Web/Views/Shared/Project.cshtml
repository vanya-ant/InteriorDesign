@model InteriorDesign.Models.ViewModels.ProjectViewModel;

    <div class="row">
        <div class="col-md-6">
            <h4>Project</h4>
            <hr />
            <form class="justify-content-center">
                @Html.HiddenFor(m => m.Id)
                <div>
                    @Html.DisplayNameFor(model => model.Name)
                </div>
                <div>
                    @Html.DisplayFor(model => model.Name)
                </div>
                @if (this.User.IsInRole("Administrator"))
                {
                    <div>
                        @Html.DisplayFor(model => model.Designer.UserName)
                    </div>
                }
                <div>
                    @Html.DisplayFor(model => model.Status)
                </div>
            </form>
            <br />
            @if (this.User.IsInRole("Administrator"))
            {
                <div class="form-group text-center">
                    <button class="btn btn-lg btn-primary btn-color-white" onclick="location.href='@Url.Action("Details", "Project",  new {  id = Model.Id })'">Details</button>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-lg btn-primary btn-color-white" onclick="location.href='@Url.Action("Edit", "Project", new {  id = Model.Id })'">Edit</button>
                </div>
                <div>
                    <button class="btn btn-lg btn-primary btn-color-white" onclick="location.href='@Url.Action("CreateProjectFile", "ProjectFile", new {  id = Model.Id })'">Add Project File</button>
                </div>
                <br />
            }
            else if (this.User.IsInRole("Designer"))
            {
                <div class="form-group text-center">
                    <button class="btn btn-lg btn-primary btn-color-white" onclick="location.href='@Url.Action("Details", "Project",  new {  id = Model.Id })'">Details</button>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-lg btn-primary btn-color-white" onclick="location.href='@Url.Action("CreateProjectFile", "ProjectFile", new {  id = Model.Id })'">Add Project File</button>
                </div>
            }
            else
            {
                <div class="form-group text-center">
                    <button class="btn btn-lg btn-primary btn-color-white" onclick="location.href='@Url.Action("Details", "Project",  new {  id = Model.Id })'">Details</button>
                </div>
            }
            <hr />
        </div>

    </div>
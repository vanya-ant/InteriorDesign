@model List<InteriorDesign.Models.ViewModels.ProjectViewModel>;

@{
    ViewData["Title"] = "IndexLoggedin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-wrapper">
    <div class="col-md-12 padding-top-md">
        <div class="bg">
            <div class="text-center">
                <div id="wellcome-text">
                    <h1>Wellcome, @this.User.Identity.Name</h1>
                    <h1>Current projects:</h1>
                    <hr />
                </div>
                <div class="justify-content-center">
                    @if (Model.Count > 0)
                    {
                        foreach (var project in Model)
                        {
                            @await Html.PartialAsync("Project", project)
                        }
                    }
                    else
                    {
                        <div class="text-center">
                            No current projects!
                        </div>
                        <br />
                        <div>
                            <a href="/Portfolio/Portfolio">Please, visit our portfolio page</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


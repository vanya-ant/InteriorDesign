@model InteriorDesign.Web.Areas.Administration.ViewModels.AllUsersViewModel

@using InteriorDesign.Data.Models

@{
    ViewData["Title"] = "Create Designer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Designer</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Assign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">              
                <asp:DropDownList ID="customerEmails" runat="server" AutoPostBack="True">
                    <label Label ID="customer"></label>
                    @Html.DropDownList("Customer", new SelectList(Model.Customers, "Email"))
                </asp:DropDownList>
                </div>
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@model InteriorDesign.Web.Areas.Administration.ViewModels.AllUsersViewModel

@using InteriorDesign.Data.Models

@{
    ViewData["Title"] = "Create Designer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-wrapper">
    <div class="row">
        <div class="col-md-6" id="assign">
            <h2>Create Designer</h2>

            <h4>New Designer</h4>
            <hr />
            <form  runat="server" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <asp:DropDownList ID="customerEmails">
                        <label Label ID="customer"></label>
                        @Html.DropDownList("Customer", new SelectList(Model.Customers, "Email"))
                    </asp:DropDownList>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>

